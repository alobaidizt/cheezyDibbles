{
  "manifest_version": 2,

  "name": "Riem",
  "description": "Find tabs of interest swiftly when your chrome window is cluttered with so many of them!",
  "version": "0.1",

  "browser_action": {
    "default_icon": "assets/cd-icon.png",
    "default_popup": "popup.html",
    "default_title": "Riem"
  },

  "background": {
    "page": "background.html"
  },

  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com https://storage.googleapis.com/code.getmdl.io/1.0.6/material.min.js; object-src 'self'",

  "permissions": [
    "activeTab",
    "notifications",
    "tabCapture",
    "tabs",
    "https://ajax.googleapis.com/"
  ]
}
